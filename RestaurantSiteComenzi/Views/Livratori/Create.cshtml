@model RestaurantSiteComenzi.Models.Livrator

@{
    ViewData["Title"] = "Create";
}

<head>
    <link href="@Url.Content("~/css/form.css")" rel="stylesheet" type="text/css" />
</head>

<h1>Adăugare Livrator</h1>

<div class="div-form">
    <div class="col-md">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nume_Livrator" class="control-label"></label>
                <input asp-for="Nume_Livrator" class="form-control" />
                <span asp-validation-for="Nume_Livrator" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prenume_Livrator" class="control-label"></label>
                <input asp-for="Prenume_Livrator" class="form-control" />
                <span asp-validation-for="Prenume_Livrator" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telefon_Livrator" class="control-label"></label>
                <input asp-for="Telefon_Livrator" class="form-control" />
                <span asp-validation-for="Telefon_Livrator" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label"  style="float: none; text-align:center;">
                @Html.DisplayNameFor(model => model.Statut_Livrator) 
                <br />
                <input checked="checked" asp-for="Statut_Livrator"/> <text>Activ</text>
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Adaugă" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div style="padding:15px 15px">
    <a class="btn back" asp-action="Index">Înapoi la listă</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
