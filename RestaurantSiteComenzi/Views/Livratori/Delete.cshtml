@model RestaurantSiteComenzi.Models.Livrator

@{
    ViewData["Title"] = "Delete";
}

<head>
    <link href="@Url.Content("~/css/form.css")" rel="stylesheet" type="text/css" />
</head>

<h1>Sunteți sigur că doriți să ștergeți aceasta?</h1>

<div class="div-form">
    <h4>Livratorul:</h4>

    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nume_Livrator)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nume_Livrator)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Prenume_Livrator)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Prenume_Livrator)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Telefon_Livrator)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Telefon_Livrator)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Statut_Livrator)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Statut_Livrator)  <text>Activ</text>
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="id" />
        <input type="submit" value="Ștergere" class="btn btn-danger" />
    </form>
</div>

<a class="btn back" asp-action="Index">Înapoi la tabel</a>