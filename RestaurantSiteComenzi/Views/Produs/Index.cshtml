@model IEnumerable<RestaurantSiteComenzi.Models.Produs>

@{
    ViewData["Title"] = "Index";
}

@Html.Partial("_Header")


<h1 style="text-align: center">Produse</h1>

<p>
    <a class="btn save" asp-action="Create">Adaugă un produs nou</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nume_Produs)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pret_Produs)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagine)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categorie_Id)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nume_Produs)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pret_Produs)
            </td>
            <td>
                <img style="width: 100%; height: auto; max-width: 200px;"
                src="@Url.Content(item.Imagine)" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categorie_produs.Categorie )
            </td>
            <td>
                <a class="btn edit" asp-action="Edit" asp-route-id="@item.id">Editează</a>
                <a class="btn delete" asp-action="Delete" asp-route-id="@item.id">Ștergere</a>
            </td>
        </tr>
}
    </tbody>
</table>
